package maxTrees;

public class Solution {
	static int count=0;
	static int max=0;
	static TreeNode prev = null;
	
	public static int maxDepth(TreeNode root){	
		if(root.right!=null || root.left!=null){
			prev=root;
			root=root.right;
			count++;
			maxDepth(root);
		}else{
			root=prev;
			count--;
			root=root.left;
			if(max<count){
				max=count;
			}
			maxDepth(root);	
		}
		return max;
	}
}


